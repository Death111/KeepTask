            <VBox spacing="5.0">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label text="Filter" />
                        <TextField fx:id="searchTextInput" promptText="Search..." />
                        <CheckBox fx:id="alsoCompletedCheckbox" mnemonicParsing="false" text="Also completed" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="10.0" spacing="10.0">
