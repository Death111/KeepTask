<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.doubleslash.keeptask.view.FilterController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label text="Filter" />
            <TextField fx:id="searchTextInput" promptText="Search..." />
            <CheckBox fx:id="alsoCompletedCheckbox" mnemonicParsing="false" text="Also completed" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label text="Time" />
            <ToggleButton fx:id="todayToggleButton" mnemonicParsing="false" text="Today" />
            <ToggleButton fx:id="tomorrowToggleButton" mnemonicParsing="false" text="Tomorrow" />
            <ToggleButton fx:id="expiredToggleButton" mnemonicParsing="false" text="Expired" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label text="Project" />
            <HBox fx:id="projectFilterHbox" spacing="10.0" />
         </children>
      </HBox>
   </children>
</VBox>
